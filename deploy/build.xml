<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="SMWHalo">
    <target name="build">
        <delete dir="bin/zip" />
    	<delete file="bin/smwhalo-dataimport-${version}.zip" />
        <mkdir dir="bin/zip" />

        <copy todir="bin/zip/extensions/DataImport/config">
            <fileset dir="../config/">
                <exclude name="**/.svn, **/CVS" />
            </fileset>
        </copy> 
        <copy todir="bin/zip/extensions/DataImport/includes">
            <fileset dir="../includes/">
                <exclude name="**/.svn, **/CVS" />
            </fileset>
        </copy>
    	
        <copy todir="bin/zip/extensions/DataImport/languages">
            <fileset dir="../languages/">
                <exclude name="**/.svn, **/CVS" />
            </fileset>
        </copy>
        <copy todir="bin/zip/extensions/DataImport/scripts">
            <fileset dir="../scripts/">
                <exclude name="**/.svn, **/CVS" />
            </fileset>
        </copy>
        <copy todir="bin/zip/extensions/DataImport/skins">
            <fileset dir="../skins/">
                <exclude name="**/.svn, **/CVS" />
            </fileset>
        </copy>
        <copy todir="bin/zip/extensions/DataImport/specials">
            <fileset dir="../specials/">
                <exclude name="**/.svn, **/CVS" />
            </fileset>
        </copy>
       
        <copy todir="bin/zip/extensions/DataImport/">
            <fileset file="../*">
                <exclude name="**/.svn, **/CVS" />
            	<exclude name="**/*deploy*" />
            </fileset>
        </copy>
        <zip destfile="bin/smwhalo-dataimport-${version}.zip" basedir="bin/zip" />
        <delete dir="bin/zip" />
    </target>

</project>
